					<td>{{ flight.prix + flight.prix * 1.021}}
						€</td>
					<td>
						<button type="button" class="select find-flight">Selectionner</button>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
